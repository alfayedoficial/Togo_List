<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
	 package="com.group4.togolist">

	 <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	 <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	 <uses-permission android:name="android.permission.INTERNET" />
	 <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	 <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

	 <application
		  android:allowBackup="true"
		  android:icon="@mipmap/ic_launcher"
		  android:label="@string/app_name"
		  android:roundIcon="@mipmap/ic_launcher_round"
		  android:supportsRtl="true"
		  android:theme="@style/AppTheme">
		  <activity android:name=".view.AboutAppActivity"></activity>
		  <activity android:name=".view.PrivacyActivity" />
		  <activity android:name=".view.AppActivity" />

		  <service
			   android:name=".util.FloatingWidgetService"
			   android:enabled="true"
			   android:exported="true" />

		  <receiver
			   android:name=".repository.TripAlarm"
			   android:enabled="true"
			   android:exported="true" />

		  <activity
			   android:name=".view.PastTripDetailsActivity"
			   android:theme="@style/AppTheme.NoActionBar" />
		  <activity
			   android:name=".view.DialogActivity"
			   android:theme="@style/dialogTheme" />
		  <activity
			   android:name=".view.DetailsTripActivity"
			   android:theme="@style/AppTheme.NoActionBar"
			   android:windowSoftInputMode="stateAlwaysHidden" />
		  <activity
			   android:name=".view.ProfileActivity"
			   android:theme="@style/AppTheme.NoActionBar"
			   android:windowSoftInputMode="stateAlwaysHidden" />
		  <activity
			   android:name=".view.AddFormActivity"
			   android:theme="@style/AppTheme.NoActionBar" />
		  <activity
			   android:name=".view.ForgetPasswordActivity"
			   android:theme="@style/AppTheme.NoActionBar" />
		  <activity
			   android:name=".view.HomeActivity"
			   android:theme="@style/AppTheme.NoActionBar" />
		  <activity
			   android:name=".view.SignUpActivity"
			   android:theme="@style/AppTheme.NoActionBar"
			   android:windowSoftInputMode="stateAlwaysHidden" />
		  <activity
			   android:name=".view.SignInActivity"
			   android:theme="@style/AppTheme.NoActionBar"
			   android:windowSoftInputMode="stateAlwaysHidden" />
		  <activity
			   android:name=".view.FirstActivity"
			   android:theme="@style/AppTheme.NoActionBar" />
		  <activity
			   android:name=".view.SplashActivity"
			   android:theme="@style/AppTheme.NoActionBar">
			   <intent-filter>
					<action android:name="android.intent.action.MAIN" />

					<category android:name="android.intent.category.LAUNCHER" />
			   </intent-filter>
		  </activity>

		  <meta-data
			   android:name="firebase_performance_logcat_enabled"
			   android:value="true" />
		  <meta-data
			   android:name="com.google.android.geo.API_KEY"
			   android:value="@string/google_maps_key" />
		  <meta-data
			   android:name="com.google.android.gms.version"
			   android:value="@integer/google_play_services_version" />
		  <meta-data
			   android:name="com.google.android.maps.v2.API_KEY"
			   android:value="@string/google_maps_key" />
	 </application>

</manifest>