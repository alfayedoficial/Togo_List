			   android:text="@string/welcomeback"
			   android:textColor="@color/home_color"
			   android:textSize="18sp"
			   android:textStyle="bold"
			   app:layout_constraintStart_toStartOf="parent"
			   app:layout_constraintTop_toBottomOf="@+id/divider" />

		  <TextView
